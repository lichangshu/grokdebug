.container-fluid
	.content
		.wrapper
			.proper-content
				.row-fluid
					.span2
						.well.sidebar-nav
							%ul.nav.nav-list
								- @arr.each do |page|
									%li
										%a{:href => "#", :class => page}
											= page
					.span9
						.row-fluid
							%pre{:id => "pattern"}
								Click any pattern to see its contents.
			.push
		.footer-wrapper
			%footer
				%div=haml :footer
%script{ :type => "text/javascript", :src =>"//apps.bdimg.com/libs/jquery/1.9.1/jquery.min.js"}
%script{ :type => "text/javascript", :src =>"//apps.bdimg.com/libs/html5shiv/r29/html5.min.js"}
:javascript
	$("a").click(function () {
		$.get('patterns/' + $(this).attr("class"), function(data){
		$('#pattern').text(data);
		});
	});
